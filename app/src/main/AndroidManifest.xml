<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.EventManagementSystem"
        tools:targetApi="31">
        <activity
            android:name=".HostStatusRestockFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/event_management_system"
            android:theme="@style/Theme.EventManagementSystem">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HostFeedbackFragment"
            android:exported="false"
            android:label="activity_host_feedback_fragment"
            android:theme="@style/Theme.EventManagementSystem"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".SupplierRestockFragment"
            android:exported="false"
            android:label="@string/title_activity_supplier_restock_fragment"
            android:theme="@style/Theme.EventManagementSystem"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".HostHomeFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".HostActivity"
            android:exported="false" />
        <activity
            android:name=".SupplierHomeFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".SupplierActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:parentActivityName=".LoginActivity" />
    </application>

</manifest>